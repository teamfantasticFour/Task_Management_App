{% extends "layout.twig" %}

{% block content %}
<div class="container py-4">
    <h4 class="mb-3">Edit Task</h4>
    <form action="/tasks/edit/{{ task.id }}" method="POST">
        <div class="mb-3">
            <label class="form-label">Judul</label>
            <input type="text" name="title" class="form-control" value="{{ task.title }}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Deskripsi</label>
            <textarea name="description" rows="4" class="form-control">{{ task.description }}</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">Status</label>
            <select name="status" class="form-select">
                {% for status in ['NEW', 'TODO', 'ON GOING', 'IN REVIEW', 'COMPLETED'] %}
                    <option value="{{ status }}" {{ task.status == status ? 'selected' }}>{{ status }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="mb-3">
            <label class="form-label">Deadline</label>
            <input type="date" name="deadline" class="form-control" value="{{ task.deadline }}">
        </div>
        <div class="mb-3">
            <label class="form-label">Tag</label>
            <input type="text" name="tag" class="form-control" value="{{ task.tag }}">
        </div>
        <div class="mb-3">
            <label class="form-label">Kategori</label>
            <input type="text" name="category" class="form-control" value="{{ task.category }}">
        </div>
        <div class="mb-3">
            <label class="form-label">Assignees</label>
            <input type="text" name="assignees" class="form-control" value="{{ task.assignees }}">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
        <a href="/tasks" class="btn btn-secondary">Kembali</a>
    </form>
</div>
{% endblock %}
