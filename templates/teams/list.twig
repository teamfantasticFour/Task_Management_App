{% extends "layout.twig" %}

{% block content %}
<div class="container mt-5">
    <h3 class="mb-4">Team List</h3>
    <a href="/teams/create" class="btn btn-primary mb-3">+ Add Team</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>No</th>
                <th>Photo</th>
                <th>Team Name</th>
                <th>Description</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for team in teams %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>
                        {% if team.photo %}
                            <img src="/uploads/{{ team.photo }}" alt="Team Image" width="60" class="img-thumbnail">
                        {% else %}
                            <span class="text-muted">No Image</span>
                        {% endif %}
                    </td>
                    <td>{{ team.name }}</td>
                    <td>{{ team.description }}</td>
                    <td>{{ team.created_at }}</td>
                    <td>
                        <a href="/teams/edit/{{ team.id }}" class="btn btn-sm btn-warning">Edit</a>
                        <a href="/teams/delete/{{ team.id }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                        <a href="/teams/{{ team.id }}/members" class="btn btn-sm btn-info">Members</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center">No teams found.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
