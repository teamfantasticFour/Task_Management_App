{% extends "layout.twig" %} {% block content %}
<div class="container py-4">
  <h4>
    Task List for Status: <strong>{{ status }}</strong>
  </h4>

  <div class="row">
    {% for task in tasks %}
    <div class="col-md-4 mb-4">
      <div class="card shadow-sm p-3">
        <div class="text-muted small mb-1">Created: {{ task.created_at|date('d M Y') }} | Deadline: {{ task.deadline }}</div>
        <span class="badge bg-info text-dark mb-1">{{ task.category }}</span>
        <h5>{{ task.title }}</h5>
        <p>{{ task.description }}</p>
        <div class="text-muted small">Tag: {{ task.tag }} | Assignees: {{ task.assignees }}</div>
      </div>
    </div>
    {% else %}
    <div class="col-12">
      <p class="text-muted">Tidak ada task pada status ini.</p>
    </div>
    {% endfor %}
  </div>
</div>
{% endblock %}
